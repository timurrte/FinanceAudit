<Window x:Class="FinancialSystem.Views.CreateCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Додати нового клієнта" Height="380" Width="350" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Ім'я:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="FirstNameTextBox" Margin="0,0,0,10" Height="25" Padding="2"/>

        <TextBlock Text="Прізвище:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="LastNameTextBox" Margin="0,0,0,10" Height="25" Padding="2"/>

        <TextBlock Text="ІПН (Ідентифікаційний код):" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="IdentityNumberTextBox" Margin="0,0,0,10" Height="25" Padding="2"/>

        <TextBlock Text="Адреса:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="AddressTextBox" Margin="0,0,0,15" Height="25" Padding="2"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Скасувати" Click="Cancel_Click" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Зберегти" Click="Save_Click" Width="80" Height="30" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>