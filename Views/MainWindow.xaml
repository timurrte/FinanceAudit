<Window x:Class="FinancialSystem.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:FinancialSystem.Views"
        xmlns:viewmodels="clr-namespace:FinancialSystem.ViewModels"
        Title="Система фінансового обліку" Height="600" Width="900">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:CustomersViewModel}">
            <views:CustomersView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AccountsViewModel}">
            <views:AccountsView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#f0f0f0" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Клієнти" Command="{Binding ShowCustomersCommand}" 
                        Width="120" Height="35" Margin="0,0,10,0" FontSize="14"/>
                <Button Content="Рахунки та транзакції" Command="{Binding ShowAccountsCommand}" 
                        Width="180" Height="35" FontSize="14"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" Margin="10"/>
    </Grid>
</Window>