<Window x:Class="FinancialSystem.Views.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Створити новий рахунок" Height="250" Width="350" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Тип рахунку:" Margin="0,0,0,5" FontWeight="Bold"/>
        <ComboBox x:Name="AccountTypeComboBox" Margin="0,0,0,15" Height="25" SelectedIndex="0">
            <ComboBoxItem Content="Ощадний рахунок (Savings)" />
            <ComboBoxItem Content="Поточний рахунок (Checking)" />
            <ComboBoxItem Content="Кредитний рахунок (Credit)" />
        </ComboBox>

        <TextBlock Text="Початковий баланс:" Margin="0,0,0,5" FontWeight="Bold"/>
        <TextBox x:Name="BalanceTextBox" Margin="0,0,0,15" Height="25" Padding="2"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Скасувати" Click="Cancel_Click" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Зберегти" Click="Save_Click" Width="80" Height="30" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>