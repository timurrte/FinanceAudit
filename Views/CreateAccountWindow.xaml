<Window x:Class="FinancialSystem.Views.CreateAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Створити новий рахунок" Height="400" Width="350" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <TextBlock Text="Тип рахунку:" Margin="0,0,0,5" FontWeight="Bold"/>
        <ComboBox x:Name="AccountTypeComboBox" Margin="0,0,0,15" Height="25" SelectedIndex="0" 
                  SelectionChanged="AccountTypeComboBox_SelectionChanged">
            <ComboBoxItem Content="Ощадний рахунок" />
            <ComboBoxItem Content="Розрахунковий рахунок" />
            <ComboBoxItem Content="Кредитний рахунок" />
        </ComboBox>

        <StackPanel x:Name="BalancePanel">
            <TextBlock Text="Початковий баланс:" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBox x:Name="BalanceTextBox" Margin="0,0,0,15" Height="25" Padding="2"/>
        </StackPanel>

        <StackPanel x:Name="OverdraftPanel" Visibility="Collapsed">
            <TextBlock Text="Ліміт овердрафту:" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBox x:Name="OverdraftTextBox" Margin="0,0,0,15" Height="25" Text="1000"/>
        </StackPanel>

        <StackPanel x:Name="CreditPanel" Visibility="Collapsed">
            <TextBlock Text="Кредитний ліміт:" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBox x:Name="CreditLimitTextBox" Margin="0,0,0,10" Height="25" Text="5000"/>

            <TextBlock Text="Штрафна ставка (напр. 0.05):" Margin="0,0,0,5" FontWeight="Bold"/>
            <TextBox x:Name="PenaltyRateTextBox" Margin="0,0,0,15" Height="25" Text="0.05"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Скасувати" Click="Cancel_Click" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="Зберегти" Click="Save_Click" Width="80" Height="30" IsDefault="True"/>
        </StackPanel>
    </StackPanel>
</Window>